<Window x:Class="AnagramsDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnagramsDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="840">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <TextBox x:Name="input"  Grid.Row="0" Grid.Column="0" AcceptsReturn="True"/>
        <TextBox x:Name="output" Grid.Row="0" Grid.Column="1" IsReadOnly="True"/>
        <Button  x:Name="button" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Content="Do the job" Click="Button_Click"/>
    </Grid>
</Window>
